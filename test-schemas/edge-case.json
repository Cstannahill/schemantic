{
  "openapi": "3.0.2",
  "info": { "title": "Sample API", "version": "1.0" },
  "paths": {
    "/users/{user_id}": {
      "get": {
        "summary": "Get user",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          },
          {
            "name": "verbose",
            "in": "query",
            "required": false,
            "schema": { "type": "boolean" }
          }
        ],
        "responses": {
          "200": {
            "description": "User response",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/UserResponse" }
              }
            }
          }
        }
      }
    },
    "/items": {
      "post": {
        "summary": "Create item",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/CreateItemRequest" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Item" }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "UserResponse": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "role": { "$ref": "#/components/schemas/UserRole" },
          "profile": { "$ref": "#/components/schemas/UserProfile" }
        },
        "required": ["id", "name", "role"]
      },
      "UserRole": {
        "type": "string",
        "enum": ["ADMIN", "EDITOR", "VIEWER"]
      },
      "UserProfile": {
        "type": "object",
        "properties": {
          "bio": { "type": "string", "nullable": true },
          "social": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      },
      "CreateItemRequest": {
        "oneOf": [
          { "$ref": "#/components/schemas/Book" },
          { "$ref": "#/components/schemas/Movie" }
        ],
        "discriminator": { "propertyName": "type" }
      },
      "Book": {
        "type": "object",
        "properties": {
          "type": { "type": "string", "enum": ["book"] },
          "title": { "type": "string" },
          "author": { "type": "string" }
        },
        "required": ["type", "title", "author"]
      },
      "Movie": {
        "type": "object",
        "properties": {
          "type": { "type": "string", "enum": ["movie"] },
          "title": { "type": "string" },
          "director": { "type": "string" }
        },
        "required": ["type", "title", "director"]
      },
      "Item": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "data": { "$ref": "#/components/schemas/CreateItemRequest" }
        },
        "required": ["id", "data"]
      }
    }
  }
}
